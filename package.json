{
  "name": "Application",
  "version": "0.0.1",
  "private": true,
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/setup-tests.ts",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.tsx?$"
  },
  "scripts": {
    "start": "npm run build:prod",
    "clean": "trash dist",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "tslint --type-check --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "server": "npm run server:hot",
    "server:hot": "cross-env NODE_ENV=development HOT_MODULES=true ts-node src/webpack/server",
    "server:story": "cross-env NODE_ENV=development STORYBOOK=true start-storybook -p 9001",
    "build": "npm run clean && webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "build:story": "cross-env NODE_ENV=production STORYBOOK=true build-storybook -o $PWD/story"
  },
  "devDependencies": {
    "@storybook/react": "^3.0.0-alpha.0",
    "@types/enzyme": "^2.4.34",
    "@types/hapi": "^16.0.0",
    "@types/jest": "^19.2.2",
    "@types/node": "^7.0.0",
    "@types/react": "^15.0.0",
    "@types/react-dom": "^15.5.0",
    "@types/react-hot-loader": "^3.0.0",
    "@types/webpack": "^2.2.4",
    "@types/webpack-env": "^1.13.0",
    "babel-plugin-transform-inline-environment-variables": "^6.8.0",
    "babel-plugin-transform-react-inline-elements": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-env": "^1.5.1",
    "cross-env": "^5.0.0",
    "css-loader": "^0.28.0",
    "enzyme": "^2.4.1",
    "enzyme-to-json": "^1.5.0",
    "eslint-config-jupl": "^0.6.3",
    "file-loader": "^0.11.1",
    "hapi": "^16.0.1",
    "hapi-webpack-plugin": "^2.0.0",
    "jest": "^20.0.4",
    "mobx": "^3.0.0",
    "mobx-react": "^4.1.0",
    "mobx-react-devtools": "^4.2.11",
    "normalize.css": "^7.0.0",
    "react": "^15.3.2",
    "react-addons-test-utils": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-hot-loader": "^3.0.0-beta.6",
    "style-loader": "^0.18.1",
    "styled-components": "^2.0.0",
    "trash-cli": "^1.3.0",
    "ts-jest": "^20.0.4",
    "ts-node": "^3.0.2",
    "tslint": "^5.3.2",
    "tslint-react": "^3.0.0",
    "typescript": "^2.1.4",
    "wcb": "^0.3.2",
    "webpack": "^2.2.0"
  }
}
