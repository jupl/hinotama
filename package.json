{
  "name": "Application",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "^6.0.0 || ^7.0.0",
    "npm": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/common/setup-tests.ts",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.tsx?$",
    "transform": {
      ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "scripts": {
    "start": "npm run server:prod",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "tslint --type-check --project tsconfig.json",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "server": "ts-node index.ts",
    "server:dev": "ts-node ",
    "server:prod": "cross-env NODE_ENV=production ",
    "build": "npm run build:ts && npm run build:next",
    "build:ts": "tsc --project tsconfig.next.json",
    "build:next": "cd app && next build"
  },
  "dependencies": {
    "@types/enzyme": "^2.4.34",
    "@types/hapi": "^16.0.0",
    "@types/jest": "^19.2.2",
    "@types/node": "^7.0.0",
    "@types/react": "^15.0.0",
    "@types/react-dom": "^0.14.17",
    "@types/webpack-env": "^1.13.0",
    "cross-env": "^4.0.0",
    "hapi": "^16.0.1",
    "hapi-es7-async-handler": "^1.0.6",
    "hapiour-decorators": "^1.2.0",
    "mobx": "^3.0.0",
    "mobx-react": "^4.1.0",
    "next": "^2.1.0",
    "normalize.css": "^6.0.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "styled-components": "^1.4.1",
    "typescript": "^2.1.4"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.23.0",
    "enzyme": "^2.4.1",
    "enzyme-to-json": "^1.5.0",
    "eslint-config-jupl": "^0.5.3",
    "jest": "^19.0.2",
    "mobx-react-devtools": "^4.2.11",
    "react-addons-test-utils": "^15.3.2",
    "ts-jest": "^19.0.6",
    "tslint": "^4.1.0",
    "tslint-react": "^2.1.1"
  }
}
